@model GigaVistor.Models.UsuarioModel

@{
    ViewData["Title"] = "Create";
}

<h1>Criar Usuario</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateAction">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Logon" class="control-label"></label>
                <input asp-for="Logon" class="form-control" />
                <span asp-validation-for="Logon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cargo" class="control-label"></label>
                <input asp-for="Cargo" class="form-control" />
                <span asp-validation-for="Cargo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>



            <div class="form-group">
                <label asp-for="IdSuperVisor" class="control-label">Responsável por escalonamento</label>
                <div>
                    <select onchange="changeUserCreate(this)" class="selectUsuarios">

                        @foreach (var user in ViewBag.Usuarios)
                        {
                            <option value="@user.Id">@user.Nome</option>
                        }
                    </select>
                </div>

                <input asp-for="IdSuperVisor" id="superVisorId" class="form-control" hidden />
                <span asp-validation-for="IdSuperVisor" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="Setor" class="control-label"></label>
                <input asp-for="Setor" class="form-control" value="@ViewBag.idSetor" />
                <span asp-validation-for="Setor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Permissao" class="control-label"></label>
                <input asp-for="Permissao" class="form-control" type="number" />
                <span asp-validation-for="Permissao" class="text-danger"></span>
            </div>
            <div style="height:10px"></div>
            <div class="form-group">
                <input type="submit" value="Criar Usuario" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="height:20px"></div>

<div>
    <a asp-controller="Setor" asp-action="Details" asp-route-id="@ViewBag.idSetor" idSetor>Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
