@model GigaVistor.Models.TarefaModel

@{
    ViewData["Title"] = "Criar Pagina";
}

<h1>Criar Tarefa</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdResponsavel" class="control-label">Reponsável Pela Tarefa</label>
                <select asp-for="IdResponsavel" class="form-control">
                    @foreach (var item in ViewBag.Funcionarios)
                    {
                        <option value="@item.Id">@item.Nome</option>
                    }
                </select>
                <span asp-validation-for="IdResponsavel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdSetor" class="control-label">Setor</label>
                <select asp-for="IdSetor" class="form-control">
                    @foreach (var item in ViewBag.Setores)
                    {
                        <option value="@item.Id">@item.Nome</option>
                    }
                </select>
                <span asp-validation-for="IdSetor" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="IdAuditoria" class="control-label"></label>
                <input asp-for="IdAuditoria" class="form-control" value="@ViewBag.AuditoriaId" />
                <span asp-validation-for="IdAuditoria" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="height:10px"></div>

<div>
    <a class="btn buttonFooterElement" asp-controller="Auditoria" asp-action="Details" asp-route-id="@ViewBag.AuditoriaId">Retornar a auditoria</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
