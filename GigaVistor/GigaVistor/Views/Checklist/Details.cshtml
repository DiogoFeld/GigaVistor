@model GigaVistor.Models.ChecklistModel

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes do CheckList</h1>



<div>
    <a asp-action="check" asp-route-id="@Model.Id">
        Realizar Check
    </a>
</div>

<div>    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nome:            
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Descrição
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>        
    </dl>
</div>
<div>
    <a asp-controller="auditoria" asp-action="Details" asp-route-id="@Model.IdAuditoria">Voltar a auditoria</a>
</div>
