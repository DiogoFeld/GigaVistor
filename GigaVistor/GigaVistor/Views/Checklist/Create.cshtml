@model GigaVistor.Models.ChecklistModel

@{
    ViewData["Title"] = "Create";
}
<h1>Criar</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateAction">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="IdAuditoria" class="control-label"></label>
                <input asp-for="IdAuditoria" class="form-control" value="@ViewBag.idAuditoria" />
                <span asp-validation-for="IdAuditoria" class="text-danger"></span>
            </div>
            <div style="height:10px"></div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="auditoria" asp-action="Details" asp-route-id="@ViewBag.idAuditoria">Back to List</a>
</div>

