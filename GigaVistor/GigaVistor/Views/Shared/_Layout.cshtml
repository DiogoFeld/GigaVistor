<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GigaVistor</title>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/mainElement.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GigaVistor.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">GigaVistor</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <div id="sideBar" style="
         position: fixed;
         top: 58px;
         bottom: 60px;
         left: 0;
         box-shadow: 0 2px 5px 0 rgb(0 0 0 / 5%), 0 2px 10px 0 rgb(0 0 0 / 5%);
         width: 180px;
         z-index: 600;">
        <div id="innerSideBar">

            <a class="nav-link aColor" asp-area="" asp-controller="Agendamento" asp-action="Index">
                <i class="fas fa-chart-area fa-fw me-3"></i><span>Agendamento</span>
            </a>
            <a class="nav-link aColor" asp-area="" asp-controller="Auditoria" asp-action="Index">
                <i class="fas fa-chart-area fa-fw me-3"></i><span>Auditoria</span>
            </a>
            <a class="nav-link aColor" asp-area="" asp-controller="Projeto" asp-action="Index">
                <i class="fas fa-chart-area fa-fw me-3"></i><span>Projeto</span>
            </a>
            <a class="nav-link aColor" asp-area="" asp-controller="Setor" asp-action="Index">
                <i class="fas fa-chart-area fa-fw me-3"></i><span>Setor</span>
            </a>
            <a class="nav-link aColor" asp-area="" asp-controller="Tarefa" asp-action="Index">
                <i class="fas fa-chart-area fa-fw me-3"></i><span>Tarefa</span>
            </a>
            <a class="nav-link aColor" asp-area="" asp-controller="TarefaTemplate" asp-action="Index">
                <i class="fas fa-chart-area fa-fw me-3"></i><span>TarefaTemplate</span>
            </a>
            <a class="nav-link aColor" asp-area="" asp-controller="Template" asp-action="Index">
                <i class="fas fa-chart-area fa-fw me-3"></i><span>Template</span>
            </a>
            <a class="nav-link aColor" asp-area="" asp-controller="Usuario" asp-action="Index">
                <i class="fas fa-chart-area fa-fw me-3"></i><span>Usuario</span>
            </a>
        </div>
    </div>

    <div class="container mainElement">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - GigaVistor - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
