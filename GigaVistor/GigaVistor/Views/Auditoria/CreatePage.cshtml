@model GigaVistor.Models.AuditoriaModel

@{
    ViewData["Title"] = "CreatePage";
}

<h1>CreatePage</h1>

<h4>AuditoriaModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="IdProjeto" class="control-label"></label>
                <input asp-for="IdProjeto" class="form-control" value="@ViewBag.ProjetoId" />
                <span asp-validation-for="IdProjeto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<br />

<a asp-controller="Auditoria" asp-action="CreatePageTemplate" asp-route-id="@ViewBag.ProjetoId">
    <btn class="btn buttonFooterElement">
        Importar Templates
    </btn>
</a>


<br />
<div id="templateDiv" hidden>
    <h3>Templates</h3>
    <div id="Templates" class="templatesDiv">
    </div>

    <h4>Tarefas Do Template</h4>
    <div id="TemplatesTarefas">
    </div>


    <button>
        Aceitar
    </button>

</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
