    <div class="col-md-4">

        <div class="form-group">
            <label asp-for="Name" class="control-label">Nome</label>
            <input asp-for="Name" id="templateName" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label">Descrição</label>
            <input asp-for="Description" id="templateDescript" class=" form-control" />
