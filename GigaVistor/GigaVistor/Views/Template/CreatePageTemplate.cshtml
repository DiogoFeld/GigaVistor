<div style="display: flex;
    flex-direction: row;
    gap: 100px;">
    <h2>
        Tarefas Realizadas
    </h2>
    <button class="buttonFooterElement" onclick="addTarefatemplate()" style="margin-bottom: 8px;">
        Criar nova Tarefa
    </button>
</div>

<div style="height:10px"></div>

<div class="mainDivContent" id="TarefaTemplateDiv">
    @foreach (var item in ViewBag.Tarefas)
    {
        <div class="mainElementSelection" style="height:180px" tipo="tarefaTemplate">


            <input class="titleSection inputTarefaTemplateT" tipo="tarefaNome" value="@item.Name" placeholder="Nome">

            <input class="auditoriaSection inputTarefaTemplateDesc" tipo="tarefaDescricao" value="@item.Descricao" placeholder="Descricao">

            <div class="centerIten">
                <i onclick="deleteTaskTemplate(this)" class="fas fa-solid fa-trash"></i>    
            </div>
        </div>
    }
</div>


<div class="centerIten" style="margin-top:10px">
    <button onclick="createTemplateImport()" class="buttonFooterElement">     
            Criar Template     
    </button>
</div>

